@INPROCEEDINGS{fairSSDL,
  title={Enhancing Tabular GAN Fairness: The Impact of Intersectional Feature Selection},
  author={Dehdarirad, Tahereh and Johnson, Ericka  and Eilertsen, Gabriel and Hajisharif, Saghi},
  abstract={In our working paper, we examine how traditional GAN (Generative Adversarial Network) architectures often reproduce biases from their training data, leading to biased synthetic outputs that affect diverse subgroups negatively. Prior studies have tried to integrate fairness into GANs but have overlooked the complex nature of intersectionality, focusing only on single population categories. Our study bridges this gap by incorporating an intersectionality framework into GANs' feature selection process, aiming to improve the fairness and representation of synthetic data. We conduct a comparative analysis using the Adult Census 1990 dataset, focusing on the intersections of Age groups and Gender. Our results show that intersectionality-informed feature selection significantly enhances subgroup fairness in synthetic data generation. 
},
  year={2024},
  pdf={SSDL-poster.pdf},
  preview={FAIRSSDL2024.png}
}

